<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/citytextView"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginTop="140dp"
        android:hint="@string/selectedcityhint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/windSpeedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/windSpeedText"
        app:layout_constraintStart_toStartOf="@+id/citytextView"
        app:layout_constraintTop_toBottomOf="@+id/citytextView" />

    <CheckBox
        android:id="@+id/pressureСheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/pressureText"
        app:layout_constraintStart_toStartOf="@+id/windSpeedCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/windSpeedCheckBox" />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/ApplyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pressureСheckBox" />
</androidx.constraintlayout.widget.ConstraintLayout>